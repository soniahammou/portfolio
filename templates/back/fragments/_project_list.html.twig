<div class="container">
  <div class="row">
    <div class="col">  

	<table class="table table-striped table-hover table-sm">
		<thead>
			<tr>
				<th scope="col">Clients</th>
				<th scope="col">Tags</th>
				<th scope="col">Infos</th>
				<th scope="col">Logo</th>
				<th scope="col"> Suprojects</th>
        		<th scope="col">Status</th>
  
			</tr>
		</thead>

		<tbody>

			{% for projet in projetsList %}
      	<tr class="table">
				<td>{{projet.title}}</td>

						<td>
            {% for tags in projet.tags %}
							<p>{{tags.name}}</p>
          {% endfor %}
              </td>

					<td>{{projet.summary}}</td>
					
					{# <td><img src="/assets/images/{{projet.picture}}" alt="" class="img-thumbnail"> #}
					<td><img src="{{asset('assets/images/')}}{{projet.picture}}" alt="" class="img-thumbnail">
					<img src="{{projet.picture}}" alt="" class="img-thumbnail"></td>

 {# <pre>
	{{ dump(projet.picture) }}
</pre> #}

			{% set totalLength = 0 %}

			{% for subproject in projet.subprojects %}
				{% set totalLength = totalLength + subproject | length %}
			{% endfor %}

			<td> {{ totalLength }} sous-projets</td>
          {# {{TODO: ajouter la publi}} #}
	
          <td>{{projet.status}}</td>
        	<td><a href="{{path('app_back_projet_show', {id: projet.id})}}"><button type="button" class="btn btn-primary">voir</button></a></td>
        	<td><a href="{{path('app_back_projet_update', {id: projet.id})}}"><button type="button" class="btn btn-warning">modifier</button></a></td>
			
		

			{% include "back/fragments/_boutons_actions.html.twig" with {'entityProperty':  projet.status, 'entity': 'projet', 'entityId': projet.id} %}


	
          {% endfor %}



			<td>
				</tr>

		</tbody>
	</table>
</div>
  </div>
</div>