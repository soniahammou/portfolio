{% extends 'back/base.html.twig' %}


{% block body %}

	{# TODO:Faire un tpl plus visuel #}

	<div class="container">
		<div class="row">
			<div class="col md-12">
				<h1>
					{{subproject.project.title}}: sous-projets</h1>
				<table class="table table-striped table-hover table-sm-12">
					<thead>
						<tr>
							<th scope="col">titre</th>
							<th scope="col">Résumé</th>
							<th scope="col">sous titre</th>
							<th scope="col">contenu</th>
							<th scope="col">image</th>
							<th scope="col">logiciel</th>
							<th scope="col">Etat</th>
						</tr>
					</thead>

					<tbody>
						<tr class="table">
							<td>{{subproject.title}}</td>
							<td>{{subproject.summary}}</td>
							<td>{{subproject.subtitle}}</td>
							<td>{{subproject.content}}</td>
							<td>
								{% for picture in subproject.pictures %}
									<img src="{{picture.subproject}}" alt="" class="img-thumbnail">
								{% endfor %}
							</td>
							<td>
								{% for logiciel in subproject.logiciels %}
									{{logiciel.name}}
								{% endfor %}
							</td>
							<td>
								{{ subproject.createdAt|date("m/d/Y") }}

							</td>
							<td>
								<i class="bi bi-circle-fill" style="font-size: 1rem; color: {{colorStatus.statusName}};"></i>
								{{subproject.status}}</td>
							
							<td><a href="{{path('app_back_subproject_update', {id: subproject.id})}}">
								<button type="button" class="btn btn-warning">modifier
								</button></a>
							</td>

							{% if subproject.status is same as('Archivé') or subproject.status is same as("Brouillon")%}

								<td><a href="{{path('app_back_subproject_publishSupbroject', {id: subproject.id})}}">
									<button type="button" class="btn btn-success">publié</button>
								</td></a>

							{% else %}
								<td><a href="{{path('app_back_subproject_archiver', {id: subproject.id})}}">
									<button type="button" class="btn btn-danger">archivé</button>
								</a></td>
							{% endif %}

						</tr>


					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
