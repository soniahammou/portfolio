{% extends 'back/base.html.twig' %}


{% block body %}
    <h1>User index</h1>
	<a href="{{ path('app_back_user_new') }}"><button type="button" class="btn btn-primary"> Cr√©er un nouvel utilisateur</button></a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                	<a href="{{ path('app_back_user_show', {'id': user.id}) }}"><button type="button" class="btn btn-primary"> show</button></a>
                	<a href="{{ path('app_back_user_edit', {'id': user.id}) }}"><button type="button" class="btn btn-primary"> edit</button></a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
